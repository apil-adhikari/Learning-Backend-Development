extends base

block content
  main.main
    .update-review-form
      h2.heading-secondary.ma-bt-lg Edit Review
      .review-info(style='display: flex; align-items: center; margin-bottom: 2rem;')
        if review.tour
          img(src=`/img/tours/${review.tour.imageCover}`, alt='Tour Image', width='300', height='auto', style='margin-right: 2rem;')
          h3(style='font-size: 2rem; margin-right: 1rem;') Tour: #{review.tour.name}
        if review.user
          span(style='font-size: 1.5rem; margin-right: 1rem;') review by
          img(src=`/img/users/${review.user.photo}`, alt='User Photo', width='100', height='100', style='border-radius: 50%; margin-right: 1rem;')
          h3(style='font-size: 1.5rem;') User: #{review.user.name}
      form.form.form--update-review(data-review-id=review._id)
        input(type='hidden', name='user', value=review.user._id)
        input(type='hidden', name='tour', value=review.tour._id)
        .form__group
          label.form__label(for='rating') Rating
          input#rating.form__input(
            type='number',
            name='rating',
            min='1',
            max='5',
            required,
            value=review.rating
          )
        .form__group
          label.form__label(for='review') Review
          textarea#review.form__input(
            name='review',
            rows='5',
            required
          )= review.review
        .form__group
          button.btn.btn--green(type='submit') Save Changes