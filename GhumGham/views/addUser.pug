extends base

block content
  main.main
    .add-user-form
      h2.heading-secondary.ma-bt-lg Add a New User
      form.form.form--add-user(method='POST' action='/api/v1/users')
        .form__group
          label.form__label(for='name') Name
          input#name.form__input(
            type='text',
            name='name',
            placeholder='John Doe',
            required
          )
        .form__group
          label.form__label(for='email') Email
          input#email.form__input(
            type='email',
            name='email',
            placeholder='john@example.com',
            required
          )
        .form__group
          label.form__label(for='role') Role
          select#role.form__input(name='role', required)
            option(value='user') User
            option(value='guide') Guide
            option(value='lead-guide') Lead Guide
            option(value='admin') Admin
        .form__group
          label.form__label(for='password') Password
          input#password.form__input(
            type='password',
            name='password',
            placeholder='••••••••',
            required
          )
        .form__group
          label.form__label(for='passwordConfirm') Confirm Password
          input#passwordConfirm.form__input(
            type='password',
            name='passwordConfirm',
            placeholder='••••••••',
            required
          )
        // Hidden fields for admin credentials
        // input#admin-email(type='hidden', name='adminEmail', value=adminEmail)
        // input#admin-password(type='hidden', name='adminPassword', value=adminPassword)
        .form__group
          button.btn.btn--green(type='submit') Add User